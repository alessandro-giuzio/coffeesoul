---
export interface props {
  heading?: string;
  text?: string;
  image?: string;
  imageAlt?: string;
  link?: string;
}

const { heading, text, image, imageAlt, link } = Astro.props as props;
---

<div class='py-6 flex flex-col md:flex-row-reverse gap-6 md:gap-10 items-start'>
  <a href={link}>
    <img
      src={image}
      alt={imageAlt}
      class='min-w-[240px] max-h-[160px] rounded-3xl'
    />
  </a>
  <div class='flex flex-col gap-4'>
    <h2 class='text-2xl font-bold'>{heading}</h2>
    <p class='text-sm max-w-md'>{text}</p>
  </div>
</div>
